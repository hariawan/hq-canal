$browncolor = #6A5A50

.index
  form
    h3
      margin-bottom 10px

    .cart
      font-size 16px
      padding 10px
      background-color rgba($browncolor, .2)
      margin-bottom 10px

      .total
        font-size 20px
        padding 5px 13px
        background-color rgba($browncolor, .5)
        color #F7FAF3

    .form-group
      margin-bottom 15px

      label
        display block
        margin-bottom 3px

        font-size 11px
        text-transform uppercase

      input[type=text], input[type=number]
        padding 10px
        width 100%

      input:disabled
        outline 0
        border 0
        background-color transparent
        padding 10px 0

      input.price
        font-size 30px

      input[type=submit]
        background-color $browncolor
        padding 10px 20px
        border none
        border-radius 3px

        color #fff
        font-weight 600
